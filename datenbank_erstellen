CREATE DATABASE wakingUp;

USE wakingUp;

CREATE TABLE IF NOT EXISTS users (
  id INT NOT NULL AUTO_INCREMENT,
  email VARCHAR(45) NOT NULL,
  password VARCHAR(45) NOT NULL,
  token VARCHAR(16),
  token_expire DATETIME,
  PRIMARY KEY (id)
);

CREATE TABLE lakes (
    id INT NOT NULL AUTO_INCREMENT,
    lake_name VARCHAR(45) NOT NULL,
    PRIMARY KEY (id)
);

CREATE TABLE ads (
    id INT NOT NULL AUTO_INCREMENT,
    title VARCHAR(60),
    message VARCHAR(200),
    date VARCHAR(20),
    lake_id INT,
    user_id INT,
    FOREIGN KEY (lake_id) REFERENCES lake(id),
    FOREIGN KEY (user_id) REFERENCES users(id),
    PRIMARY KEY (id)
);

